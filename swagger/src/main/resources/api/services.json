{
  "swagger": "2.0",
  "host": "localhost:9191",
  "basePath": "/api",
  "info": {
    "description": "Blog Article REST Services",
    "version": "1.0",
    "title": "Blog Article REST Services"
  },
  "paths": {
    "/blog/article/search/id/{id}": {
      "get": {
        "tags": [
          "Blog Search Id operation"
        ],
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the user to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Article retrieved",
            "schema": {
              "$ref": "#/definitions/Blog"
            }
          }
        }
      }
    },
    "/blog/article/search/user/{user}": {
      "get": {
        "tags": [
          "Blog Search User operation"
        ],
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "path",
            "description": "Identifier of the user to search",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "blog article response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Blog"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Blog": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "1"
        },
        "user": {
          "type": "string",
          "example": "cmoulliard"
        },
        "body": {
          "type": "string",
          "example": "This is a blog article"
        },
        "title": {
          "type": "string",
          "example": "Title of the blog article"
        },
        "postDate": {
          "type": "date-time",
          "example": "2015-08-10T10:10"
        }
      }
    }
  }
}