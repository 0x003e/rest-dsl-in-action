<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <cm:property-placeholder id="lab-properties" persistent-id="com.redhat.gpe.lab">
        <cm:default-properties>
            <cm:property name="clustername" value="insight"/>
            <cm:property name="address" value="192.168.1.80"/>
            <cm:property name="port" value="9200"/>
            <cm:property name="indexname" value="blog"/>
            <cm:property name="indextype" value="post"/>
            <cm:property name="fileUri" value="file://src/data/articles?noop=true"/>
        </cm:default-properties>
    </cm:property-placeholder>
    
    <bean id="elasticSearchService" class="com.redhat.gpe.service.ElasticSearchService" init-method="init" destroy-method="shutdown"/>

    <camelContext trace="false" xmlns="http://camel.apache.org/schema/blueprint">

        <propertyPlaceholder id="properties" location="blueprint:lab-properties"/>
        
        <packageScan>
            <package>com.redhat.gpe.route</package>
        </packageScan>
    </camelContext>

</blueprint>
